{
  "name": "stock-reader",
  "version": "0.1.0",
  "main": "electron.js",
  "homepage": "./",
  "build": {
    "productName": "stockReader",
    "appId": "app.stockreader.v000900",
    "copyright": "shawn",
    "buildVersion": "0.9.0",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "build/icon.ico",
      "files": [
        "build/**/*",
        "node_modules/**/*",
        "package.json",
        "!venv/**/*",
        "!src/**/*",
        "!**/build/xpyserver_dist/*",
        "!**/build/builds/*",
        "!**/.vscode/*",
        "!**/build/server/*",
        "!**/build/systemlog/*",
        "!**/.git/*",
        "!**/__pycache__/*"
      ],
      "extraFiles": [
        {
          "from": "pyserver_dist",
          "to": "pyserver_dist",
          "filter": [
            "**/*"
          ]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "stockReader",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    }
  },
  "dependencies": {
    "chart.js": "^2.9.3",
    "cross-env": "^6.0.3",
    "electron-is-dev": "^1.1.0",
    "electron-progressbar": "^1.2.0",
    "electron-root-path": "^1.0.16",
    "plotly.js": "^1.58.4",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-plotly.js": "^2.5.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "typeface-roboto": "^0.0.75"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "build-react": "react-scripts --max_old_space_size=4096 build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "build-electron": "electron-builder build --win -c.extraMetadata.main=build/electron.js --publish never",
    "build": "yarn build-react && copy C:\\stock-reader\\electron.js C:\\stock-reader\\build\\electron.js && yarn build-electron",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron-publish": "electron-builder build --win -c.extraMetadata.main=build/electron.js --publish always"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "electron": ">7.6.4",
    "electron-builder": "^22.1.0",
    "wait-on": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
